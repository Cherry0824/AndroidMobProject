<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mob.user.ui.MobLoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="vertical">

        <View
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/red"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_back"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                app:srcCompat="@drawable/base_return_back" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/white"
                android:text="登录"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="66dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <View
            android:id="@+id/login_name_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/gary_f5f5f9" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:textColor="@color/gary_333333"
            android:textColorHint="@color/gary_999999"
            android:textCursorDrawable="@drawable/base_cursor_color"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <ImageView
            android:id="@+id/login_clear_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/base_edit_delete" />

        <View
            android:id="@+id/login_pwd_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/gary_f5f5f9" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/gary_333333"
            android:textColorHint="@color/gary_999999"
            android:textCursorDrawable="@drawable/base_cursor_color"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/login_clear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/base_edit_delete" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/login_clear_pwd_rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/base_edit_delete" />

        <View
            android:id="@+id/login_pwd_line_rp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/gary_f5f5f9" />

        <EditText
            android:id="@+id/login_pwd_rp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/gary_333333"
            android:textColorHint="@color/gary_999999"
            android:textCursorDrawable="@drawable/base_cursor_color"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>

    <TextView
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">


        <TextView
            android:id="@+id/login_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="忘记密码？"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:text="立即注册"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12" />
    </FrameLayout>
</LinearLayout>
